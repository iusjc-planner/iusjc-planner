		{
			"name": "3. Teachers Service (Gateway, JWT)",
			"item": [
				{
					"name": "List Teachers",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/teachers",
							"host": ["{{gateway_url}}"],
							"path": ["api", "teachers"]
						}
					}
				},
				{
					"name": "Create Teacher",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nom\": \"Teacher\",\n  \"prenom\": \"Alpha\",\n  \"email\": \"teacher.alpha@iusj.ci\",\n  \"telephone\": \"0600000000\",\n  \"specialite\": \"Math\",\n  \"grade\": \"PROFESSEUR\",\n  \"status\": \"ACTIVE\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/teachers",
							"host": ["{{gateway_url}}"],
							"path": ["api", "teachers"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Teacher created with valid token\", () => {",
									"    pm.response.to.have.status(200);",
									"    const teacher = pm.response.json();",
									"    pm.expect(teacher.id).to.not.be.undefined;",
									"    pm.environment.set(\"teacher_id\", teacher.id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Get Teacher By Id",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/teachers/{{teacher_id}}",
							"host": ["{{gateway_url}}"],
							"path": ["api", "teachers", "{{teacher_id}}"]
						}
					}
				},
				{
					"name": "Update Teacher",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nom\": \"Teacher\",\n  \"prenom\": \"Beta\",\n  \"email\": \"teacher.beta@iusj.ci\",\n  \"telephone\": \"0611223344\",\n  \"specialite\": \"Physique\",\n  \"grade\": \"ASSISTANT\",\n  \"status\": \"EN_CONGE\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/teachers/{{teacher_id}}",
							"host": ["{{gateway_url}}"],
							"path": ["api", "teachers", "{{teacher_id}}"]
						}
					}
				},
				{
					"name": "Delete Teacher",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/teachers/{{teacher_id}}",
							"host": ["{{gateway_url}}"],
							"path": ["api", "teachers", "{{teacher_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "4. Public Endpoints Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Authentication Flow",
			"item": [
				{
					"name": "Create User for Testing",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nom\": \"Admin\",\n  \"prenom\": \"Test\",\n  \"email\": \"admin@test.com\",\n  \"login\": \"admin\",\n  \"password\": \"admin123\",\n  \"role\": \"ADMIN\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/auth/register",
							"host": ["{{auth_url}}"],
							"path": ["auth", "register"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Note: Cet endpoint doit être créé dans le Auth Service",
									"pm.test(\"User created or already exists\", () => {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 409]);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Login and Get JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"login\": \"admin\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/auth/login",
							"host": ["{{gateway_url}}"],
							"path": ["auth", "login"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Login successful\", () => {",
									"    pm.response.to.have.status(200);",
									"    const response = pm.response.json();",
									"    pm.expect(response.token).to.not.be.undefined;",
									"    ",
									"    // Sauvegarder le token pour les requêtes suivantes",
									"    pm.environment.set(\"jwt_token\", response.token);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
		},
		{
			"name": "2. Protected Endpoints Tests",
			"item": [
				{
					"name": "Get Users - Without Token (Should Fail)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/users",
							"host": ["{{gateway_url}}"],
							"path": ["api", "users"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Access denied without token\", () => {",
									"    pm.response.to.have.status(401);",
									"    const response = pm.response.json();",
									"    pm.expect(response.error).to.include(\"Token JWT manquant\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Get Users - With Valid Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/users",
							"host": ["{{gateway_url}}"],
							"path": ["api", "users"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Access granted with valid token\", () => {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(pm.response.json()).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Create User - With Valid Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nom\": \"Nouveau\",\n  \"prenom\": \"Utilisateur\",\n  \"email\": \"nouveau@test.com\",\n  \"login\": \"nouveau\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/users",
							"host": ["{{gateway_url}}"],
							"path": ["api", "users"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"User created with valid token\", () => {",
									"    pm.response.to.have.status(200);",
									"    const user = pm.response.json();",
									"    pm.expect(user.id).to.not.be.undefined;",
									"    pm.environment.set(\"created_user_id\", user.id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Get Users - With Invalid Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer invalid.token.here"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/users",
							"host": ["{{gateway_url}}"],
							"path": ["api", "users"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Access denied with invalid token\", () => {",
									"    pm.response.to.have.status(401);",
									"    const response = pm.response.json();",
									"    pm.expect(response.error).to.include(\"Token JWT invalide\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
		},
